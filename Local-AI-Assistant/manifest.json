{
    "manifest_version": 3,
    "name": "Local AI Assistant (LLM)",
    "version": "1.1.0",
    "description": "Process selected text with Local AI Assistant API",
    "permissions": [
        "storage",
        "contextMenus",
        "activeTab",
        "scripting",
        "system.display"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}